{
  "name": "jellyprobe",
  "version": "0.1.0",
  "description": "Dockerized testing tool for Jellyfin servers with automated playback tests",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:debug": "jest --coverage --detectOpenHandles --verbose",
    "lint": "eslint src/**/*.js public/js/**/*.js",
    "lint:fix": "eslint src/**/*.js public/js/**/*.js --fix"
  },
  "keywords": [
    "jellyfin",
    "testing",
    "docker",
    "media-server"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.4",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "node-cron": "^4.2.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
