# JellyProbe Environment Configuration
# Copy this file to .env and configure your settings

# Encryption key for API key storage (generate with: openssl rand -hex 32)
# IMPORTANT: Set this to a fixed value to persist across container restarts
ENCRYPTION_KEY=

# Jellyfin Server Configuration (can also be set via the web UI)
JELLYFIN_URL=http://localhost:8096
API_KEY=

# Timezone for scheduled runs (e.g. Europe/Berlin, America/New_York, Asia/Tokyo)
# Defaults to UTC if not set. Run `timedatectl` or see https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=UTC

# Application Settings
PORT=3000
DATA_PATH=/data

# Node Environment
NODE_ENV=production
